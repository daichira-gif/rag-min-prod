# --- App ---
APP_ENV=dev
HOST=0.0.0.0
PORT=8000

# --- Database (pgvector) ---
PGHOST=db
PGPORT=5432
PGDATABASE=rag
PGUSER=rag
PGPASSWORD=ragpassword
EMBED_DIM=1536

# --- Embeddings ---
EMBEDDER_PROVIDER=openai         # openai | sentence_transformers
OPENAI_API_KEY=sk-xxxxxxxxxxxxx  # required if provider=openai
SENTENCE_TRANSFORMERS_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- A/B testing ---
AB_DEFAULT_BUCKET=A               # A or B
PROMPT_VERSION_A=prompt_v1.txt
PROMPT_VERSION_B=prompt_v2.txt
MODEL_VERSION_A=gpt-4o-mini
MODEL_VERSION_B=gpt-4.1-mini

# --- Observability ---
OTEL_EXPORTER_OTLP_ENDPOINT=      # e.g., http://otel-collector:4317
LOG_LEVEL=INFO
RETENTION_DAYS=30

# --- Security/Governance ---
MASK_PII_IN_LOGS=true
ALLOW_PROMPT_INJECTION_TESTS=true
